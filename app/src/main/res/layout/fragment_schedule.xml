<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AgendaFragment"
    >

    <!--<TextView-->
    <!--android:id="@+id/title"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--style="@style/ContentText"-->
    <!--/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal"
        >
        <de.sec.android.views.TTFTextView
            android:id="@+id/first_day_button"
            android:text="@string/firstDay"
            style="@style/AgendaDayButton"
            />

        <de.sec.android.views.TTFTextView
            android:id="@+id/second_day_button"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:text="@string/secondDay"
            style="@style/AgendaDayButton"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380.5dp"
        >

        <de.sec.android.views.TTFTextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/H1Text"
            android:text="Loading..."
            android:textColor="@color/gray_dark"
            android:layout_centerInParent="true"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/timelineScrollView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbarThumbHorizontal="@drawable/scroll_thumb"
                >

                <RelativeLayout
                    android:id="@+id/timeGridContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >

                    <!-- Time/hour -lines -->
                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        >

                        <LinearLayout
                            android:id="@+id/timelineNumbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:adjustViewBounds="true"
                            android:orientation="horizontal"
                            style="@style/ContentText"
                            />

                        <LinearLayout
                            android:id="@+id/timelineVerticalLines"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:orientation="horizontal"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RelativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/timelineNow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:orientation="horizontal"
                            android:visibility="invisible"
                            >
                            <TextView
                                android:id="@+id/timelineNowMargin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                            <include layout="@layout/timeline_now_marker"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/gigLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_large"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/stageLayout"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginBottom="1dp"
                />

        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
